{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Start Backend",
			"type": "shell",
			"command": "D:\\B2B\\PDM\\.venv\\Scripts\\python.exe",
			"args": [
				"manage.py",
				"runserver",
				"0.0.0.0:8000"
			],
			"options": {
				"cwd": "${workspaceFolder}/backend"
			},
			"isBackground": true,
			"problemMatcher": {
				"pattern": {
					"regexp": "^.*$",
					"file": 1,
					"location": 2,
					"message": 3
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": "^Performing system checks",
					"endsPattern": "^.*Quit the server|^.*Starting development server"
				}
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "dedicated",
				"showReuseMessage": false,
				"clear": true,
				"group": "servers"
			},
			"runOptions": {
				"runOn": "folderOpen"
			}
		},
		{
			"label": "Start Frontend",
			"type": "shell",
			"command": "npm.cmd",
			"args": [
				"run",
				"dev"
			],
			"options": {
				"cwd": "${workspaceFolder}/frontend"
			},
			"isBackground": true,
			"problemMatcher": {
				"pattern": {
					"regexp": "^.*$",
					"file": 1,
					"location": 2,
					"message": 3
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": "^.*VITE.*",
					"endsPattern": "^.*Local:.*http://localhost:3000"
				}
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "dedicated",
				"showReuseMessage": false,
				"clear": true,
				"group": "servers"
			},
			"dependsOn": ["Start Backend"],
			"runOptions": {
				"runOn": "folderOpen"
			}
		},
		{
			"label": "Start All Servers",
			"dependsOn": [
				"Start Backend",
				"Start Frontend"
			],
			"problemMatcher": [],
			"runOptions": {
				"runOn": "folderOpen"
			}
		},
		{
			"isBackground": true,
			"problemMatcher": []
		},
		{
			"label": "Backend Server",
			"type": "shell",
			"command": "python D:\\B2B\\PDM\\backend\\manage.py runserver 8000",
			"isBackground": true,
			"problemMatcher": []
		}
	]
}